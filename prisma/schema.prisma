// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Area {
  id            String      @id @default(uuid())
  region        String
  name          String
  slug          String      @unique
  parentAreaId  String?
  latitude      Float
  longitude     Float
  order         Int?        @default(0)
  isDisabled    Boolean?    @default(false)
  isDeleted     Boolean?    @default(false)
}